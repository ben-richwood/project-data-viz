https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = tab
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,py}]
indent_size = 2
tab_width = 2
charset = utf-8

[*.{css,scss}]
indent_size = 4
tab_width = 4

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
